<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Author Home Page</title>
</head>
<body>
    <h1>Author Home Page</h1>
    <h2><%= blogTitle %> by <%= authorName %></h2>
    <a href="/author/settings">Settings</a>
    <form action="/author/create-draft" method="post">
        <button type="submit">Create New Draft</button>
    </form>
    <h2>Published Articles</h2>
    <ul>
        <% publishedArticles.forEach(article => { %>
            <li>
                <h3><%= article.title %></h3>
                <p>Created: <%= new Date(article.created_at).toLocaleString('en-GB', { timeZone: 'UTC', year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %> UTC</p>
                <p>Published: <%= new Date(article.published_at).toLocaleString('en-GB', { timeZone: 'UTC', year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %> UTC</p>
                <p>Last Modified: <%= new Date(article.updated_at).toLocaleString('en-GB', { timeZone: 'UTC', year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %> UTC</p>
                <a href="/reader/article/<%= article.article_id %>">Share Link</a>
                <form action="/author/delete-article/<%= article.article_id %>" method="post">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <h2>Draft Articles</h2>
    <ul>
        <% draftArticles.forEach(article => { %>
            <li>
                <h3><%= article.title %></h3>
                <p>Created: <%= new Date(article.created_at).toLocaleString('en-GB', { timeZone: 'UTC', year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %> UTC</p>
                <p>Last Modified: <%= new Date(article.updated_at).toLocaleString('en-GB', { timeZone: 'UTC', year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %> UTC</p>
                <a href="/author/edit/<%= article.article_id %>">Edit</a>
                <form action="/author/publish-article/<%= article.article_id %>" method="post">
                    <button type="submit">Publish</button>
                </form>
                <form action="/author/delete-article/<%= article.article_id %>" method="post">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
